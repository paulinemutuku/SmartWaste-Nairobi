{
  "name": "smartwaste-backend",
  "version": "1.0.0",
  "description": "Backend for SmartWaste Nairobi - Urban Waste Collection",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --detectOpenHandles --forceExit",
    "test:unit": "jest tests/unit --verbose --detectOpenHandles --forceExit",
    "test:integration": "jest tests/integration --verbose --detectOpenHandles --forceExit",
    "test:auth": "jest tests/auth.test.js --verbose --detectOpenHandles --forceExit",
    "test:reports": "jest tests/reports.test.js --verbose --detectOpenHandles --forceExit",
    "test:collectors": "jest tests/collectors.test.js --verbose --detectOpenHandles --forceExit",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles --forceExit",
    "test:routes": "jest tests/routes.test.js --verbose --detectOpenHandles --forceExit",
    "test:users": "jest tests/users.test.js --verbose --detectOpenHandles --forceExit",
    "test:feedback": "jest tests/feedback.test.js --verbose --detectOpenHandles --forceExit",
    "test:schedules": "jest tests/schedules.test.js --verbose --detectOpenHandles --forceExit"
  },
  "keywords": [
    "nairobi",
    "waste-management",
    "smart-city"
  ],
  "author": "Pauline Mutuku",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "bcrypt": "^6.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "routes/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testTimeout": 10000
  }
}
